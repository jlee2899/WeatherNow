<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232634"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSearchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search Bar"
                android:layout_margin="8dp"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/novecento_font"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_bg"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCurrDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:text="Today's Date"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/novecento_font"
                    android:textAlignment="center"/>

                <ImageView
                    android:id="@+id/ivCurrWeather"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_margin="16dp"
                    app:srcCompat="@drawable/cloudy"/>

                <TextView
                    android:id="@+id/tvCurrWeatherType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mostly Cloudly"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/novecento_font"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tvTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="55°"
                    android:textSize="42sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/novecento_font"
                    android:textAlignment="center"
                    android:layout_margin="4dp"/>

                <TextView
                    android:id="@+id/tvHL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="H:67°  L:43°"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/novecento_font"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_weight="0.333"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivWind"
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            app:srcCompat="@drawable/wind"
                            android:paddingBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvWind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/novecento_font"
                            android:text="Wind"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvWindSpeed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/novecento_font"
                            android:text="5-8 km/h"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_weight="0.333"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivPressure"
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            app:srcCompat="@drawable/pressure"
                            android:paddingBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvPressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/novecento_font"
                            android:text="Pressure"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvPressureAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/novecento_font"
                            android:text="1000 MB"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_weight="0.333"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivHumidity"
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            app:srcCompat="@drawable/humidity"
                            android:paddingBottom="4dp" />

                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/novecento_font"
                            android:text="Humidity"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvHumidityPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/novecento_font"
                            android:text="51%"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHourlyForecast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hourly Forecast"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/novecento_font"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv7days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7 Day Forecast>"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/novecento_font"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>